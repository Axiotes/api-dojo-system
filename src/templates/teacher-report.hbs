<html lang='pt-BR'>
  <head>
    <meta charset='UTF-8' />
    <title>Fatura Teste</title>
    <style>
      @page {
        size: A4;
        margin: 20mm 12mm;
      }
      body {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 12px;
        color: #222;
      }
      h1 {
        font-size: 18px;
        margin: 0 0 8px;
      }
      .muted {
        color: #666;
      }
      .row {
        display: flex;
        justify-content: space-between;
        gap: 16px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 12px;
      }
      th,
      td {
        border-bottom: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }
      th {
        background: #f5f5f5;
      }
      .totais {
        margin-top: 12px;
        width: 100%;
      }
      .totais td {
        padding: 6px;
      }
      .right {
        text-align: right;
      }
      .footer {
        position: fixed;
        bottom: 10mm;
        left: 12mm;
        right: 12mm;
        font-size: 10px;
        color: #888;
      }
    </style>
  </head>
  <body>
    <h1>Fatura Teste</h1>
    <div class='row'>
      <div>
        <div><strong>Cliente:</strong> Teste</div>
        <div class='muted'>Teste</div>
        <div class='muted'>Teste</div>
      </div>
      <div class='right'>
        <div><strong>Data:</strong> Teste</div>
        <div><strong>Emissor:</strong> Teste</div>
      </div>
    </div>

    <table>
      <thead>
        <tr>
          <th>Descrição</th>
          <th class='right'>Teste</th>
          <th class='right'>Teste</th>
          <th class='right'>Teste</th>
        </tr>
      </thead>
      <tbody>
        {{#each itens}}
          <tr>
            <td>{{this.descricao}}</td>
            <td class='right'>Teste</td>
            <td class='right'>Teste</td>
            <td class='right'>Teste</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <table class='totais'>
      <tr>
        <td class='right'><strong>Total:</strong></td>
        <td class='right'><strong>Teste</strong></td>
      </tr>
    </table>

    <div class='footer'>
      Gerado automaticamente em Teste
    </div>
  </body>
</html>